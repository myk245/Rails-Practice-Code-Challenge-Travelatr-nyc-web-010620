<h1>Create a New Blogger</h1>

<% if flash[:message] %>
  <%= flash[:message]%></h3>
<% end %> 

<%= form_for @blogger do |f| %>
   <label>Blogger Name: </label>
   <%= f.text_field :name %>

   <label>Blogger Age: </label>
   <%= f.number_field :age %>

   <label>Blogger Bio: </label>
   <%= f.text_field :bio %>

   <%= f.submit "Submit" %>
   <% end %>