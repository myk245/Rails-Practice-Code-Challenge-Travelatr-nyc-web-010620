<h4>Update Your Post</h4>

<% if flash[:message] %>
 <% flash[:message].each do |message| %>
<ul>
   <li><h4 style= "color: red;"><%= message %></h4></li>
</ul>
   <% end %>
<% end %>

<%= form_for @post do |f| %>
   <%= f.label :title %>
   <%= f.text_field :title %>
   <br>
   <br>
   <br>
   <%= f.label :content %>
   <%= f.text_area :content %>
   <br>
   <%= f.collection_select(:blogger_id, Blogger.all, :id, :name) %>
   <br>
   <%= f.collection_select(:destination_id, Destination.all, :id, :name) %>
   <br>
   <%= f.submit %>
   <% end %>